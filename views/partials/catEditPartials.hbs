<input id="event-title" type="text" class="input" name="title" required placeholder="title"
  value="{{event.title}}">

<input id="event-date" type="date" class="input" name="date" required placeholder="DD/MM/YY"
  value="{{#formatDateInput event.date}}{{/formatDateInput}}">

<textarea id="event-descr" rows="4" cols="50" maxlength="1000" class="input" name="description" required placeholder="ex: amazing trip">{{event.description}}</textarea>