<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/books-create" class="create-books-form" enctype="multipart/form-data">
    <h3 class="form-title"> Create a book/movie/serie event</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="event-name" class="label-name label">Event title</label>
      <input id="event-name" type="text" class="input-text input" name="title" required placeholder="title" >
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="event-date" class="label-date label">Date</label>
      <input id="event-date" type="date" class="input-text input" name="date" required placeholder="DD/MM/YY">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="event-descr" class="label-descr label">Description</label>
      <input id="event-descr" type="text" class="input-text input"  name="description" required placeholder="ex: amazing trip">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="event-image" class="label-image label">Photo</label>
      <input id="event-image" type="text" class="event-image input" name="image" >
    </div>
    <div class="form-item-wrapper flexed-item"></div>
      <label for="event-rating" class="label-tags label">Rating</label>
       <span><input type="radio" name="rating" id="str5" value="5"><label for="str5"></label></span>
    <span><input type="radio" name="rating" id="str4" value="4"><label for="str4"></label></span>
    <span><input type="radio" name="rating" id="str3" value="3"><label for="str3"></label></span>
    <span><input type="radio" name="rating" id="str2" value="2"><label for="str2"></label></span>
    <span><input type="radio" name="rating" id="str1" value="1"><label for="str1"></label></span>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="event-review" class="label-review label">Review</label>
      <input id="event-review" type="text" class="event-review input" name="review" placeholder="give your opinion">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="event-author" class="label-author label">Author or director</label>
      <input id="event-author" type="text" class="event-author input" name="author" placeholder="director or author">
    </div>
    <button class="button-primary add-event-btn">Create this event</button>
  </form>
</div>