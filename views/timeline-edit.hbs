<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/timeline-edit/{{timeline._id}}" class="edit-timeline-form">
    <h3 class="form-title"> Edit Timeline</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-name" class="label-name label">Timeline name</label>
      <input id="timeline-name" type="text" class="input-text input" name="name" required placeholder="" value="{{timeline.name}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-date" class="label-date label">Date</label>
      <input id="timeline-date" type="date" class="input-text input" name="date" required value="{{timeline.date}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-descr" class="label-descr label">Description</label>
      <input id="timeline-descr" type="text" class="input-text input"  name="description" required value="{{timeline.description}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-cat" class="label-cat label">Category</label>
      <input id="timeline-cat" type="text" class="input-text input" name="category" required value="{{timeline.category}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-image" class="label-image label">Photo</label>
      <input id="timeline-image" type="text" class="timeline-image input" name="image" value="{{timeline.image}}">
    </div>
    <div class="form-item-wrapper flexed-item"></div>
      <label for="timeline-tags" class="label-mtags label">Tags</label>
      <input id="timeline-tags" type="text" class="timeline-tags" name="tags" value="{{timeline.tags}}">
    </div>
    <button class="button-primary add-timeline-btn">Edit this timeline</button>
  </form>
</div>