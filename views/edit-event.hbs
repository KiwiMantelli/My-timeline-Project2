<div class="big-container">
  <form method="post" action="/general-create" class="event-form" enctype="multipart/form-data">
    <h3 class="form-title"> Edit an event</h3>
    {{>catEditPartials}}
    <div>
      <label for="event-rating" class="label hidden">Rating:</label>
      <span>
        <input type="radio" name="rating" id="str5" class="hidden" value="{{event.rating}}"><label for="str5"></label>
        <input type="radio" name="rating" id="str4" class="hidden" value="{{event.rating}}"><label for="str4"></label>
        <input type="radio" name="rating" id="str3" class="hidden" value="{{event.rating}}"><label for="str3"></label>
        <input type="radio" name="rating" id="str2" class="hidden" value="{{event.rating}}"><label for="str2"></label>
        <input type="radio" name="rating" id="str1" class="hidden" value="{{event.rating}}"><label for="str1"></label>
      </span>
    </div>

    <input id="event-review" type="text" class="event-review input hidden" name="review" placeholder="give your opinion"
      value="{{event.review}}">


    <input id="event-author" type="text" class="event-author input hidden" name="author" placeholder="director or author"
      value="{{event.author}}">

    <div class="map hidden">{{event.map}}</div>

    <input id="event-people" type="text" class="event-people input hidden" name="people" placeholder="people who was with you"
      value="{{event.people}}">

    <button class="btn">Create!</button>
  </form>
</div>