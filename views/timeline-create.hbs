<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/timeline-create" class="create-timeline-form" enctype="multipart/form-data">
    <h3 class="form-title"> Create Timeline</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-name" class="label-name label">Timeline name</label>
      <input id="timeline-name" type="text" class="input-text input" name="name" required placeholder="title" >
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-date" class="label-date label">Date</label>
      <input id="timeline-date" type="date" class="input-text input" name="date" required placeholder="DD/MM/YY">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-descr" class="label-descr label">Description</label>
      <input id="timeline-descr" type="text" class="input-text input"  name="description" required placeholder="ex: amazing trip">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-cat" class="label-cat label">Category</label>
      <input id="timeline-cat" type="text" class="input-text input" name="category" required placeholder="ex: trips">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="timeline-image" class="label-image label">Photo</label>
      <input id="timeline-image" type="text" class="timeline-image input" name="image" >
    </div>
    <div class="form-item-wrapper flexed-item"></div>
      <label for="timeline-tags" class="label-mtags label">Tags</label>
      <input id="timeline-tags" type="text" class="timeline-tags" name="tags">
    </div>
    <button class="button-primary add-timeline-btn">Create this timeline</button>
  </form>
</div>